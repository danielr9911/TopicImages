<div class="container">

  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="header">Contenido p√∫blico
        <small>Subido por otros usuarios</small>
      </h1>
    </div>
  </div>

  <form method="post" action="{{baseUrl}}buscar">
    <div class="form-group">
      <label>Buscar</label>
      <input type="text" class="form-control" name="buscar" placeholder="Busqueda por usuario">
    </div>
    <button type="submit" class="btn btn-default">Entrar</button>
  </form>

  <hr>

    {{#each imagenes}}
    <div class="row">
      <div class="col-md-7">
          <img class="img-responsive" src='{{this.imagen}}'>
      </div>
      <div class="col-md-5">
        <h3>{{this.titulo}}</h3>
        <h4>{{this.usuario}}</h4>
        <p>{{this.descripcion}}</p>
        <a class="btn btn-primary" href="{{this.imagen}}">Descargar <span class="glyphicon glyphicon-chevron-right"></span></a>
      </div>
    </div>
    <!-- /.row -->

    <hr>
  {{/each}}
</div>
