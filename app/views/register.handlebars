<h2 class="page-header">Registro</h2>
{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form method="post" action="{{baseUrl}}/register">
  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" placeholder="Nombre" name="name">
  </div>
  <div class="form-group">
    <label>Usuario</label>
    <input type="text" class="form-control" placeholder="Usuario" name="username">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Contraseña</label>
    <input type="password" class="form-control" placeholder="Contraseña" name="password">
  </div>
  <div class="form-group">
    <label>Confirmar contraseña</label>
    <input type="password" class="form-control" placeholder="Contraseña" name="password2">
  </div>
  <button type="submit" class="btn btn-default">Registrar</button>

  <div class="text-center">
    <label class='small text-center'>¿Tienes una cuenta? <a href="/login"> Ingresa </a></label>
  </div>

</form>
