<h2 class="page-header">Datos de la cuenta</h2>
{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form method="post" action="/account">
  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" value="{{usuario.name}}" name="name">
  </div>
  <div class="form-group">
    <label>Usuario</label>
    <input type="text" class="form-control" value="{{usuario.username}}" name="username" disabled>
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" value="{{usuario.email}}" name="email">
  </div>

  <button type="submit" class="btn btn-primary">Actualizar</button>



</form>

<h2 class="page-header">Cambiar contraseña</h2>
<form method="post" action="/password">
  <div class="form-group">
    <label>Contraseña actual</label>
    <input type="password" class="form-control" placeholder="Contraseña actual  " name="passwordAct">
  </div>
  <div class="form-group">
    <label>Contraseña nueva</label>
    <input type="password" class="form-control" placeholder="Contraseña nueva" name="password">
  </div>
  <div class="form-group">
    <label>Confirmar contraseña nueva</label>
    <input type="password" class="form-control" placeholder="Contraseña nueva" name="password2">
  </div>

  <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>

<h2 class="page-header">Eliminar cuenta</h2>
<form method="post" action="/delete/{{imagen.id}}?_method=delete">
  <button type="submit" class="btn btn-danger btn-lg btn-block">Eliminar mi cuenta permanentemente</button>
</form>
